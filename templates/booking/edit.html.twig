{% extends 'base.html.twig' %}

{% block title %}Modifier Réservation{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Modifier Réservation</h1>

    {{ form_start(form, {'attr': {'class': 'reservation-form'}}) }}
        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.date) }}
                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.date) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_label(form.time) }}
                {{ form_widget(form.time, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.time) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.court) }}
                {{ form_widget(form.court, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.court) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_label(form.players) }}
                {{ form_widget(form.players, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.players) }}
            </div>
        </div>
        <div class="text-center">
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
    {{ form_end(form) }}

    <div class="mt-3">
        <a href="{{ path('app_booking') }}" class="btn btn-secondary">Retour à mes réservations</a>
    </div>
</div>
{% endblock %}
