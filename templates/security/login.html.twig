{% extends 'base.html.twig' %}

{% block title %}Connexion - Padel Marseille{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'padel-green': '#4CAF50',
                        'padel-blue': '#2196F3'
                    }
                }
            }
        }
    </script>
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-xl shadow-lg">
        <div>
            <img class="mx-auto h-24 w-auto" src="{{ asset('images/logo-padel-marseille.png') }}" alt="Padel Marseille Logo">
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Connectez-vous à votre compte
            </h2>
        </div>
        
        <form method="post" class="mt-8 space-y-6">
            {% if error %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                    <span class="block sm:inline">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                </div>
            {% endif %}

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            
            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    <label for="username" class="sr-only">Adresse email</label>
                    <input type="text" name="_username" id="username" 
                        class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-padel-blue focus:border-padel-blue focus:z-10 sm:text-sm" 
                        placeholder="Adresse email" required autofocus>
                </div>
                <div>
                    <label for="password" class="sr-only">Mot de passe</label>
                    <div class="relative">
                        <input type="password" name="_password" id="password" 
                            class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-padel-blue focus:border-padel-blue focus:z-10 sm:text-sm" 
                            placeholder="Mot de passe" required>
                        <button type="button" id="toggle-password" 
                            class="absolute inset-y-0 right-0 pr-3 flex items-center text-sm leading-5 text-gray-500 hover:text-padel-blue hidden">
                            <svg id="eye-closed" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden" viewBox="0 0 20 20" fill="currentColor" >
                                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                            </svg>
                            <svg id="eye-open" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M3.707 2.293a1 1 0 00-1.414 1.414l14 14a1 1 0 001.414-1.414l-1.473-1.473A10.014 10.014 0 0019.542 10C18.268 5.943 14.478 3 10 3a9.958 9.958 0 00-4.512 1.074l-1.781-1.78zM10 5a5 5 0 014.192 2.402l-1.45-1.451A3 3 0 0010 7a3 3 0 00-2.745 1.813l-1.61-1.61A5 5 0 0110 5z" clip-rule="evenodd" />
                                <path d="M10 12a2 2 0 01-2-2V8.586L4.707 5.293a1 1 0 011.414-1.414l14 14a1 1 0 01-1.414 1.414l-3.586-3.586A9.928 9.928 0 0110 17c-4.478 0-8.268-2.943-9.542-7a9.97 9.97 0 014.646-5.907L10 10v2z" />
                            </svg>
                        </button>
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input id="remember_me" name="_remember_me" type="checkbox" 
                        class="h-4 w-4 text-padel-blue focus:ring-padel-blue border-gray-300 rounded">
                    <label for="remember_me" class="ml-2 block text-sm text-gray-900">
                        Se souvenir de moi
                    </label>
                </div>

                <div class="text-sm">
                    <a href="#" class="font-medium text-padel-blue hover:text-blue-500">
                        Mot de passe oublié ?
                    </a>
                </div>
            </div>

            <div>
                <button type="submit" 
                    class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-padel-blue hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-padel-blue">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                        <svg class="h-5 w-5 text-blue-500 group-hover:text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                        </svg>
                    </span>
                    Connexion
                </button>
            </div>
        </form>

        <div class="mt-6 text-center">
            <p class="text-sm text-gray-600">
                Vous n'avez pas de compte ? 
                <a href="{{ path('app_register') }}" class="font-medium text-padel-blue hover:text-blue-500">
                    Inscrivez-vous
                </a>
            </p>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const usernameInput = document.getElementById('username');
        const passwordInput = document.getElementById('password');
        const togglePasswordButton = document.getElementById('toggle-password');
        const eyeOpen = document.getElementById('eye-open');
        const eyeClosed = document.getElementById('eye-closed');
        
        // Optional: Add some client-side validation
        usernameInput.addEventListener('input', function() {
            this.value = this.value.trim();
        });
        
        passwordInput.addEventListener('input', function() {
            if (this.value.length > 0) {
                this.classList.remove('border-red-500');
            }
        });

        // Initially hide the toggle button
        togglePasswordButton.classList.add('hidden');

        // Show toggle button only when password input has a value
        passwordInput.addEventListener('input', function() {
            if (this.value.length > 0) {
                togglePasswordButton.classList.remove('hidden');
            } else {
                togglePasswordButton.classList.add('hidden');
            }
        });

        togglePasswordButton.addEventListener('click', function() {
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeOpen.classList.remove('hidden');
                eyeClosed.classList.add('hidden');
            } else {
                passwordInput.type = 'password';
                eyeOpen.classList.add('hidden');
                eyeClosed.classList.remove('hidden');
            }
        });
    });
</script>
{% endblock %}
